---
const links = [
    { href: '/', text: 'Inicio' },
    { href: '/consultas', text: 'Consultas' },
    { href: '/observatorio-judicial', text: 'Observatorio Judicial' },
    { href: '/sesiones', text: 'Sesiones' },
    { href: '/transparencia', text: 'Transparencia' },
];
---
<nav class="bg-white shadow dark:bg-slate-900">
    <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
        {
            links.map(({href, text}) => (
                <a href={href} class="text-gray-800 dark:text-gray-200 border-b-2 border-blue-500 mx-1.5 sm:mx-6">
                    {text}
                </a>
            ))
        }
    </div>
</nav>
